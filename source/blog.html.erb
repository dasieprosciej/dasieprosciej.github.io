---
pageable: true
per_page: 10

---
<%= partial 'partials/components/header' %>

<section class="section section-blog">
    <div class="ct">
      <div class="section-content">
        <hr>
        <h2>
          Zobacz jak my≈õlimy
        </h2>


            <% if paginate && num_pages > 1 %>
              <p>Page <%= page_number %> of <%= num_pages %></p>

              <% if prev_page %>
                <p><%= link_to 'Previous page', prev_page %></p>
              <% end %>
            <% end %>
            
            <div class="grid grid--gutters">
            
              <% page_articles.each_with_index do |article, i| %>
                <article class="grid-cell u-1of3">
                  <img src="http://placehold.it/700x200" alt="">          
                  <h2><%= link_to article.title, article %></h2>
                  <time><%= article.date.strftime('%b %e %Y') %></time>
<!--                   <% $current_listed_article = article %>
                  <%= article.summary(50, ' ...') %>
                  <% $current_listed_article = nil %> -->

                  <p>Czas czytania: <%= reading_time(article.body) %> </p>
                </article>
              <% end %>
            
            </div>

            <% if paginate %>
              <% if next_page %>
                <p><%= link_to 'Next page', next_page %></p>
              <% end %>
            <% end %>
      </div>
      
</section>    

<%= partial 'partials/components/footer' %>